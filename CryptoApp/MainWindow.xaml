<Window x:Class="CryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CryptoApp"
        xmlns:viewModel="clr-namespace:CryptoApp.ViewModels"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:CryptoViewModel/>
    </Window.DataContext>
    
    <Grid>
        <ListView ItemsSource="{Binding Cryptocurrencies}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding rank}" Margin="5" />
                        <TextBlock Text="{Binding name}" Margin="5" />
                        <TextBlock Text="{Binding priceUsd}" Margin="5" />
                        <Image Source="{Binding imageUrl}" Width="30" Height="30" Margin="5" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>